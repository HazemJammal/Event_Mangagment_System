<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (ActionBar background color) -->
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textColorPrimary">@color/default_text_color</item>
        <item name="android:textColorSecondary">@color/default_text_color</item>
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>
    </style>

    <!-- Custom bottom navigation style -->
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Set background color -->
        <item name="android:background">@color/white</item> <!-- White background -->

        <!-- Set custom icon and text color for the BottomNavigationView -->
        <item name="itemIconTint">@color/nav_item_icon_color</item>
        <item name="itemTextColor">@color/nav_item_text_color</item>
    </style>

    <!-- Light theme variant -->
    <style name="Base.Theme.Material3.Light" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here -->
    </style>

    <style name="Theme.Material3.Light" parent="Base.Theme.Material3.Light" />

    <style name="Base.Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
